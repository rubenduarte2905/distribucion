

<div class="container" style="margin:50px auto">
    <div class="row">
        <div class="col">
            <p class="text-right">Usuario: {{ usuario }} !
            <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesi√≥n
            <i class = "fas fa-sign-out-alt"></i></a>    
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-7">
            <h3>Listado de Compras</h3>
        </div>
        <div class="col-2 text-right">
            <a href="/admin/compras/agregar" class="btn btn-success"><i class="fa fa-plus"></i>Nuevo</a>
        </div>
        
    </div>

    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Expediente OC</th>
                        <th scope="col">Mercaderia</th>
                        <th scope="col">Fecha Inicio Entregas</th>
                         <th scope="col">Cantidad Existente</th>
                        <th scope="col" class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each compras}}
           
                      <tr>
                          <th scope="row">{{id}}</th>
                          <td>{{expedienteOC}}</td>
                          <td>{{{imagen}}} {{mercaderia}}</td>
                          <td>{{fechaAltaEntregas}}</td>
                         
                          <td>{{cantidadTotal}}</td>
                          <td class="text-end">
                            <a href="/admin/compras/modificar/{{id}}" class="btn btn-sm btn-secondary"><i class= "fa fa-pencil"></i></a>
                             <a href="/admin/compras/eliminar/{{id}}" class="btn btn-sm btn-secondary"><i class= "fa fa-trash"></i></a>
                          </td> 
                      </tr>
                      {{/each}}
                </tbody>
          
            </table>
        </div>
    </div>